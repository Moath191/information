{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      //"command": "/usr/local/bin/dotnet",
      // "command": "/home/ageeb/dotnet/dotnet",
      "command": "dotnet",

      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/information.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      //      "command": "/usr/local/bin/dotnet",
      // "command": "/home/ageeb/dotnet/dotnet",
      "command": "dotnet",

      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/information.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      // "command": "/usr/local/bin/dotnet",
      // "command": "/home/ageeb/dotnet/dotnet",
      "command": "dotnet",

      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/information.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
